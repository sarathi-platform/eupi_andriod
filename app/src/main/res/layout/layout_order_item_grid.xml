<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_parent_order_item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/min_height_grid_item">

    <TextView
        android:id="@+id/text_view_title_order_item_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_horizontal_grid"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="@id/image_view_order_item_grid"
        app:layout_constraintStart_toStartOf="@id/image_view_order_item_grid"
        app:layout_constraintTop_toBottomOf="@id/image_view_order_item_grid"
        tools:text="Item 1" />

    <TextView
        android:id="@+id/text_view_price_order_item_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_horizontal_grid"
        android:textColor="@color/blue_grey_700"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/image_view_order_item_grid"
        app:layout_constraintStart_toStartOf="@id/image_view_order_item_grid"
        app:layout_constraintTop_toBottomOf="@id/text_view_title_order_item_grid"
        tools:text="Rs. 100" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_order_item_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/grey_50_20"
        android:scaleType="fitXY"
        android:src="@drawable/ic_android_device"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

</androidx.constraintlayout.widget.ConstraintLayout>